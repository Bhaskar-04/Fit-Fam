<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload">
        <input type="file" name="image">
    </form>
    <div class="profet flex flex-col items-center mt-16">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 z-10">
                <i class="text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="https://qph.cf2.quoracdn.net/main-qimg-22dde97cecb3314f5dba96d1bc856b6e-lq">
            </div>
        </div>
        <h1 class="text-3xl font-semibold">#Jonny</h1>
        <h3 class="text-md">@username</h3>
        <a href="#" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold" >EDIT</a>
        <button class="px-10 py-2 rounded-lg bg-red-500 text-xs font-semibold mt-7" >Add New Post</button>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="https://m.media-amazon.com/images/M/MV5BMzc1YTA1ZjItMWRhMy00ZTBlLTkzNTgtNTc4ZDE3YTM3ZDk2XkEyXkFqcGdeQXVyNDUzOTQ5MjY@._V1_FMjpg_UX1000_.jpg">
            </div>
            <h3 class="text-xl font-semibold mt-3">All Posts</h3>
            <h5 class="text-sm font-medium opacity-60">29 Posts</h5>
        </div>
    </div>
</div>
<script>
    document.querySelector("#uploadicon").addEventListener("click",function(){
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    })

</script>


