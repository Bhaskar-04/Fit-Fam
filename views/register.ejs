<% include ./partials/header.ejs %>
<div class="w-screen h-screen flex items-center justify-center bg-zinc-600 ">
    <div class="w-[30vw]  h-[60vh] bg-white px-20 py-10 rounded-[30px]">
        <h1 class="text-3xl text-center font-semibold mb-5 text-zinc-700 leading-none tracking-tighter">Create New Account</h1>
        <form method="post">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="name" placeholder="Name">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="email" name="username" placeholder="email">
            <input class="border-2 rounded-md block mt-2  w-full px-3 py-2 " type="password" name="password" placeholder="password">
            <input class="border-2 block mt-3 w-full px-3 py-2 bg-red-500 text-white rounded-full" type="submit" value="create new account">
            <p class="text-xs font-semibold text-zinc-700 mt-6 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection.</p>
        </form>
        <a class="inline-block mt-5 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login existing account</a>
    </div>
</div>
